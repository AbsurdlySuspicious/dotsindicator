<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    >
  <android.support.v7.widget.CardView
      android:id="@+id/card_view"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginEnd="16dp"
      android:layout_marginStart="16dp"
      android:layout_gravity="center"
      tools:cardBackgroundColor="@android:color/holo_blue_light"
      app:cardCornerRadius="16dp"
      app:cardElevation="4dp"
      app:cardUseCompatPadding="true"
      app:contentPaddingBottom="64dp"
      >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        >
      <ImageView
          android:id="@+id/item_image"
          android:layout_width="192dp"
          android:layout_height="192dp"
          android:layout_centerHorizontal="true"
          android:layout_marginTop="16dp"
          android:background="@drawable/background_text_element"
          android:alpha="0.5"
          />

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@id/item_image"
          android:layout_marginEnd="16dp"
          android:layout_marginStart="16dp"
          android:layout_marginTop="16dp"
          android:orientation="vertical"
          >
        <View
            android:layout_width="256dp"
            android:layout_height="16dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/background_title_element"
            />

        <View
            android:id="@+id/item_text1"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="32dp"
            android:alpha="0.5"
            android:background="@drawable/background_text_element"
            />

        <View
            android:id="@+id/item_text2"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_gravity="bottom"
            android:layout_marginTop="8dp"
            android:alpha="0.5"
            android:background="@drawable/background_text_element"
            />
        <View
            android:id="@+id/item_text3"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_gravity="bottom"
            android:layout_marginTop="8dp"
            android:alpha="0.5"
            android:background="@drawable/background_text_element"
            />
        <View
            android:id="@+id/item_text4"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_gravity="bottom"
            android:layout_marginEnd="64dp"
            android:layout_marginTop="8dp"
            android:alpha="0.5"
            android:background="@drawable/background_text_element"
            />
      </LinearLayout>
    </RelativeLayout>
  </android.support.v7.widget.CardView>
</FrameLayout>